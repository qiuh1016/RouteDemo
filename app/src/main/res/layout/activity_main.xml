<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cetcme.routedemo.MainActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="record"
        android:id="@+id/recordButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="recordButtonTapped"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="HIDE"
        android:id="@+id/showUserButton"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/recordButton"
        android:layout_toEndOf="@+id/recordButton"
        android:onClick="showUserButtonTapped"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="定位"
        android:id="@+id/locationButton"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/showUserButton"
        android:layout_toEndOf="@+id/showUserButton"
        android:onClick="locationButtonTapped"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/locationButton"
        android:layout_marginLeft="30dp"
        android:inputType="number"
        android:textSize="13sp"
        android:layout_alignBottom="@+id/setButton" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="设置"
        android:id="@+id/setButton"
        android:layout_alignBottom="@+id/showUserButton"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:onClick="setButtonTapped"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/editText2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:enabled="true"
        android:textSize="10sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="route"
        android:id="@+id/button"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignRight="@+id/setButton"
        android:layout_alignEnd="@+id/setButton"
        android:onClick="routeButtonTapped"/>


</RelativeLayout>
